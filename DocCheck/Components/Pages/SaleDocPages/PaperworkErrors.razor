@using DocCheck.Common
@using DocCheck.Domain
@using static DocCheck.Components.Pages.SaleDocPages.PaperworkErrorCheckBox

@if (SaleDoc is not null)
{
    <table class="table">
        <tbody>
            <tr>
                <td><PaperworkErrorCheckBox SaleDoc="SaleDoc" ErrorType="PaperworkErrorType.NoDocument" OnInput="OnCreateOrUpdateError" /></td>
                @if (SaleDoc.Position != Position.ForDispatch)
                {
                    <td><PaperworkErrorCheckBox SaleDoc="SaleDoc" ErrorType="PaperworkErrorType.ErrorByAmount" OnInput="OnCreateOrUpdateError" /></td>
                    <td></td>
                    <td></td>
                }
            </tr>
            @if (SaleDoc.Position != Position.ForDispatch)
            {
                <tr>
                    <td><PaperworkErrorCheckBox SaleDoc="SaleDoc" ErrorType="PaperworkErrorType.ReceiptAddress" OnInput="OnCreateOrUpdateError" /></td>
                    <td></td>
                    <td></td>
                    <td></td>
                </tr>
                <tr>
                    <td><PaperworkErrorCheckBox SaleDoc="SaleDoc" ErrorType="PaperworkErrorType.ConsigneeJobTitle" OnInput="OnCreateOrUpdateError" /></td>
                    <td><PaperworkErrorCheckBox SaleDoc="SaleDoc" ErrorType="PaperworkErrorType.ConsigneeSignature" OnInput="OnCreateOrUpdateError" /></td>
                    <td><PaperworkErrorCheckBox SaleDoc="SaleDoc" ErrorType="PaperworkErrorType.ConsigneeFullName" OnInput="OnCreateOrUpdateError" /></td>
                    <td><PaperworkErrorCheckBox SaleDoc="SaleDoc" ErrorType="PaperworkErrorType.ReceiptCargoDate" OnInput="OnCreateOrUpdateError" /></td>
                </tr>
                <tr>
                    <td><PaperworkErrorCheckBox SaleDoc="SaleDoc" ErrorType="PaperworkErrorType.ResponsibleJobTitle" OnInput="OnCreateOrUpdateError" /></td>
                    <td><PaperworkErrorCheckBox SaleDoc="SaleDoc" ErrorType="PaperworkErrorType.ResponsibleSignature" OnInput="OnCreateOrUpdateError" /></td>
                    <td><PaperworkErrorCheckBox SaleDoc="SaleDoc" ErrorType="PaperworkErrorType.ResponsibleFullName" OnInput="OnCreateOrUpdateError" /></td>
                    <td></td>
                </tr>
                <tr>
                    <td><PaperworkErrorCheckBox SaleDoc="SaleDoc" ErrorType="PaperworkErrorType.NoStamp" OnInput="OnCreateOrUpdateError" /></td>
                    <td><PaperworkErrorCheckBox SaleDoc="SaleDoc" ErrorType="PaperworkErrorType.WrongStamp" OnInput="OnCreateOrUpdateError" /></td>
                    <td></td>
                    <td></td>
                </tr>
                <tr>
                    <td colspan="4"><PaperworkErrorCheckBox SaleDoc="SaleDoc" ErrorType="PaperworkErrorType.Other" OnInput="OnCreateOrUpdateError" HasErrorMessage="true" /></td>

                </tr>
                <tr>
                    <td colspan="4"><PaperworkErrorCheckBox SaleDoc="SaleDoc" ErrorType="PaperworkErrorType.QuantityError" OnInput="OnCreateOrUpdateError" HasErrorMessage="true" /></td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    [Parameter]
    public SaleDoc? SaleDoc { get; set; }

    [Parameter]
    public EventCallback<ErrorCheckBoxParams> OnCreateOrUpdateError { get; set; }
}